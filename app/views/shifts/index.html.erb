<nav class="navbar">
  <a class="navbar-brand" href="/">
    <h1 class="logo"><i class="fa fa-plus" aria-hidden="true"></i>Shifty</h1>
  </a>
    <div class="dropdown pull-right">
  <% if current_user %>
      <%= image_tag current_user.image_url, id:"dropdownMenu1", class:"avatar-image dropdown-toggle", data: {toggle: "dropdown"}, alt: current_user.name %>
  <% else %>
    <span class="logged-out-avatar fa-stack fa-lg" id="dropdownMenu1" data-toggle="dropdown">
      <i class="fa fa-circle-thin fa-stack-2x" aria-hidden="true"></i>
      <i class="fa fa-user-md fa-stack-1x" aria-hidden="true"></i>
    </span>
  <% end %>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
      <% if current_user %>
        <%= link_to 'Add a shift!', new_shift_path, class: 'dropdown-item' %>
        <%= link_to 'Log Out', '#', id: 'logout', class: 'dropdown-item' %>
      <% else %>
        <%= link_to 'Enter with Facebook', '/auth/facebook', class: 'dropdown-item' %>
      <% end %>
      </div>
    </div>
</nav>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>

<h2>
  <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y")%>
  <%= link_to ">", date: @date.next_month %>
</h2>
<%= calendar @date do |date| %>
  <%= date.day %>
  <% if @shifts_by_date[date] %>
    <div class="container-fluid">
      <% @shifts_by_date[date].each do |shift| %>
        <div class="row <%= shift.day_shift ? 'day' : 'night' %>">
          <div class="col-md-4 pull-md-right m-t-3 text-md-right">
            <%= link_to image_tag(shift.user.image_url, class:"avatar-image small-img", data: {toggle: "tooltip", placement: "bottom"}, title: shift.user.name , alt: shift.user.name), shift_path(shift) %>
          </div>
          <div>
            <% if shift.pending %>
                <i class="fa fa-question-circle" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Pending"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end%>
<% end %>