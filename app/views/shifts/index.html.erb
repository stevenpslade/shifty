<h1>Shifty</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>

<% if current_user %>
  <%= image_tag current_user.image_url, alt: current_user.name %>
  <%= link_to 'Log Out', '#', id: 'logout' %>
<% else %>
  <%= link_to 'Facebook', '/auth/facebook' %>
<% end %>

<%= link_to "Add a shift!", new_shift_path %>
<hr>
<% @shifts.each do |shift| %>
  <p><%= link_to "Shift", shift_path(shift) %></p>
  <%= image_tag shift.user.image_url, alt: shift.user.name %>
  <p><%= formatted_date(shift.start_date) %></p>
  <% if shift.day_shift %>
    <p>Day</p>
  <% else %>
    <p>Night</p>
  <% end %>
  <p><%= shift.notes %></p>
  <hr>
<% end %>
