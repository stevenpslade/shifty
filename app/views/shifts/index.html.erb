<h1>Shifty</h1>
<%= link_to "Add a shift!", new_shift_path %>
<hr>
<% @shifts.each do |shift| %>
  <%= link_to "Shift", shift_path(shift) %>
  <p><%= shift.start_date %></p>
  <% if shift.day_shift %>
    <p>Day</p>
  <% else %>
    <p>Night</p>
  <% end %>
  <p><%= shift.notes %></p>
  <hr>
<% end %>
